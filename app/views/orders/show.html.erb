<h2>Your Order</h2>
<br>
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Price per unit</th>
      </tr>
    </thead>
    <tbody>
      <% @line_items.each_with_index do |line_item, i| %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= line_item.product_name %></td>
          <td><%= line_item.product_quantity %></td>
          <td>number_to_currency(<%= line_item.product_price %>)</td>
        </tr>
      <% end %>
        <tr>
          <td></td>
          <td></td>
          <td>Total: </td>
          <td>$<%= @order.total %></td>
        <tr>
    </tbody>
  </table>
</div>
